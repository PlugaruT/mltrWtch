<layout id="WatchFace">
    <label id="TimeLabel" x="center" y="center" font="@Fonts.font_hot" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />

    <label id="StepStatsDisplay" text="00000" x="110" y="60" font="@Fonts.font_xtiny" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />

    <label id="DatePlaceholder" font="@Fonts.font_tiny" />
    <drawable id="DateDisplay" class="DateControl">
    	<param name="text">"00/00/00"</param>
    	<param name="font">@Fonts.font_tiny</param>      	           
        <param name="color">Gfx.COLOR_BLACK</param>
        <param name="justification">Gfx.TEXT_JUSTIFY_CENTER</param>
        <param name="offsetYFromCenter">45</param>        
    </drawable>   

</layout>
